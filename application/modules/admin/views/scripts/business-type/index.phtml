	class="pattern-style-b" id="dataGrid">
	<thead>
		<tr>
			<th scope="col">Business Type ID</th>
			<th scope="col">Business Type</th>
			<th scope="col">Total Customer</th>
			<th scope="col">Total Template</th>
			<th scope="col">Actions</th>
		</tr>
	</thead>
